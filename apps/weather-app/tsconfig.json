{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@penn/schemas": ["src/app/schemas/index"],
      "@penn/hooks": ["src/app/hooks/index"],
      "@penn/utils": ["src/app/utils/index"],
      "@penn/layout": ["src/app/components/layout/index"],
      "@penn/screens": ["src/app/screens/index"],
      "@penn/context": ["src/app/context/index"],
      "@penn/theme": ["src/app/theme/index"],
      "@penn/types": ["src/app/types/index"],
      "@penn-ui/common": ["src/app/components/common/index"]
    }
  },
  "files": [],
  "include": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
